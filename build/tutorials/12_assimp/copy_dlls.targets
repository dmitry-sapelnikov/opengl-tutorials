<?xml version="1.0" encoding="utf-8"?>
<Project ToolVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup Condition="'$(Configuration)' == 'Debug'">
    <Dlls Include="$(MSBuildThisFileDirectory)..\..\..\3rd_party\assimp\bin\assimpd.dll" />
  </ItemGroup>
  <ItemGroup Condition="'$(Configuration)' == 'Release'">
    <Dlls Include="$(MSBuildThisFileDirectory)..\..\..\3rd_party\assimp\bin\assimp.dll" />
  </ItemGroup>
  <Target Name="CopyDLLs">
    <Copy SourceFiles="@(Dlls)" DestinationFolder="$(OutDir)"/>
  </Target>
  <PropertyGroup>
    <BuildDependsOn>CopyDLLs;$(BuildDependsOn)</BuildDependsOn>
  </PropertyGroup>
</Project>
